<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/bg_elevated_rounded_edge_layout">

        <EditText
            android:id="@+id/messageEditTExt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/message"
            android:maxLines="1"
            android:layout_margin="@dimen/general_widget_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/directionTextView"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current text in the database"
                android:layout_margin="@dimen/general_widget_margin"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="@dimen/general_widget_margin"
                android:layout_marginRight="@dimen/general_widget_margin"/>

            <TextView
                android:id="@+id/viewText"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/writeButton"
            android:background="@drawable/bg_button"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_foreground"
            android:layout_margin="8dp"
            android:text="Read"/>

        <Button
            android:id="@+id/updateButton"
            android:background="@drawable/bg_button"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_foreground"
            android:layout_margin="8dp"
            android:text="Update"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/readButton"
            android:background="@drawable/bg_button"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_foreground"
            android:layout_margin="8dp"
            android:text="Read"/>

        <Button
            android:id="@+id/deleteButton"
            android:background="@drawable/bg_button"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_foreground"
            android:layout_margin="8dp"
            android:text="Delete"/>

    </LinearLayout>

</LinearLayout>