<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bg_elevated_rounded_edge_layout"
        android:elevation="4dp">

        <Button android:id="@+id/btn_choose"
            android:hint="CHOOSE FILE"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/interactive_transparent_button"
            android:layout_margin="6dp"
            android:drawableLeft="@drawable/folder"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </Button>

        <Button
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/interactive_transparent_button"
            android:hint="UPLOAD"
            android:drawableLeft="@drawable/upload_30"
            android:id="@+id/btn_upload"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="317dp"
        android:layout_height="278dp"
        android:padding="10dp"
        android:elevation="4dp"
        android:background="@drawable/bg_transparent_image_button"
        android:layout_gravity="center"/>

</LinearLayout>
